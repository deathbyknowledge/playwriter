{
  "manifest_version": 3,
  "name": "Rebrow",
  "version": "0.1.0",
  "description": "Remote browser control - let AI agents control your browser",
  "permissions": ["debugger", "tabGroups", "contextMenus", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "lib/background.mjs",
    "type": "module"
  },
  "action": {
    "default_title": "Configure Rebrow",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-gray-16.png",
      "32": "icons/icon-gray-32.png",
      "48": "icons/icon-gray-48.png",
      "128": "icons/icon-gray-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-gray-16.png",
    "32": "icons/icon-gray-32.png",
    "48": "icons/icon-gray-48.png",
    "128": "icons/icon-gray-128.png"
  }
}
