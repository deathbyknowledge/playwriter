{
  "name": "pcr",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter pcr dev",
    "deploy": "pnpm --filter pcr deploy",
    "release:extension": "pnpm build && rm -f extension.zip && cd extension && zip -r ../extension.zip dist && cd .."
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  },
  "license": "MIT"
}
